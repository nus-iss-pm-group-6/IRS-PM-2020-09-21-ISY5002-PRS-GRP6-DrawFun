# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Tab indentation
[*]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

# Matches the exact files either package.json or yaml
[{*.yml, *.yaml, package.json}]
indent_style = space
indent_size = 2
